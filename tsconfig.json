{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": { // 新版本无须配置
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
